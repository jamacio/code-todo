{
  "name": "code-todo",
  "publisher": "JamacioRocha",
  "displayName": "Code TODO",
  "description": "Displays TODO comments in a tree view and adds a new icon to the menu to show all files with TODO flags.",
  "icon": "resources/icon.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "bugs": {
    "url": "https://github.com/jamacio/code-todo/issues"
  },
  "homepage": "https://github.com/jamacio/code-todo",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamacio/code-todo.git"
  },
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/*.{js,ts,jsx,tsx,php,py,java,cs,cpp,h,html,css,md,json}"
  ],
  "contributes": {
    "commands": [
      {
        "command": "codeTODO.refresh",
        "title": "Code TODO: Refresh"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoExplorer",
          "title": "Code TODO",
          "icon": "resources/todo.svg"
        }
      ]
    },
    "views": {
      "todoExplorer": [
        {
          "id": "todoTreeView",
          "name": "ðŸš€ Super TODOs",
          "icon": "resources/todo.svg"
        }
      ]
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "build": "webpack --mode production",
    "compile": "webpack --mode production",
    "package": "npm run build && vsce package",
    "test": "node ./src/test/runTest.js",
    "pretest": "npm run compile",
    "test-compile": "tsc -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^10.4.5",
    "mocha": "^11.7.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@parcel/fs": "^2.14.4",
    "readable-stream": "^4.7.0"
  }
}
